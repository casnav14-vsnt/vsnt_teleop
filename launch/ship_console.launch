<?xml version="1.0"?>

<launch>
  <arg name="joy_dev" default="/dev/input/js0" />

  <node name="joy" pkg="joy" type="joy_node" output="screen" >
    <param name="dev" value="$(arg joy_dev)" />
    <param name="autorepeat_rate" value="10" />
    <param name="coalesce_interval" value="0.01" />
    <param name="deadzone" value="0.0" />
  </node>

  <!-- Note that axis IDs are those from the joystick message plus one, to be able to invert axes by specifiying either positive or negative axis numbers.-->
  <!-- Axis 2 from joy message thus has to be set as '3' or '-3'(inverted mode) below-->
  <node name="teleop" pkg="vsnt_teleop" type="vsnt_teleop" output="screen">
    <rosparam subst_value="true">
      thrust_axis: -6
      yaw_axis: -4

      thrust_max: 500
      thrust_offset: 1500

      yaw_max: -500
      yaw_offset: 1500

      slow_button: 12
      go_button: 13
      stop_button: 15
    </rosparam>

  </node>
</launch>
